<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%= render 'shared/profile_and_new_blog',user: current_user %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class='table'>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
            <th colspan="3"></th>
          </tr>

          <% @users.each do |user| %>
            <tr>
              <td>
                <%= image_tag '蝶々.jpg', size: "100x100" %>
              </td>
              <td><%= link_to user.name, user_path(user) %></td>
              <td><%= link_to "Show", user_path(user), class: "btn custom-pink-btn" %></td>
            </tr>
          <% end %>
          <%= paginate @users %>
        </table>
      </div>
    </div>
  <div>
</main>
