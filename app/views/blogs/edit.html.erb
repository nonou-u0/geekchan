<h1>編集ぺーじ</h1>
<% if @blog.errors.any? %>
  <div id="error_explanation">
    <h2><%= @blog.errors.count %>errors prohibited this blog from being saved:</h2>
    <ul>
      <% @blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<!-- form_with部分 -->
<%= form_with model:@blog, local: true do |f| %>
  <div class="form-group">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
  <%= f.label :body, "Opinion" %>
  <%= f.text_area :body, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit '編集完了', class: "btn btn-success" %>
  </div>
<% end %>

<div class="link-group">
  <%= link_to "Show", blog_path(@blog.id), class: "link-show" %>
  |
  <%= link_to "Back", blogs_path, class: "link-back" %>
</div>