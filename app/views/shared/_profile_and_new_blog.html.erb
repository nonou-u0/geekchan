<% if @blog && @blog.errors.any? %>
  <h3>
    <%= @blog.errors.count %> error prohibited this blog from being saved:
  </h3>
  <ul>
    <% @blog.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<h2>ログインしてる人</h2>
<table class='table'>
  <tr>
    <th>Name <%= user.name %></th> 
  </tr>
</table>


<h2 class="mt-3">新規投稿</h2>

<%= form_with model: Blog.new, url: blogs_path, local: true do |f| %>
  <div class="form-group">
    <%= f.label :title ,"企業名" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :body, "本文" %>
    <%= f.text_area :body, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Create Book", class: "btn custom-pink-btn" %>
  </div>
<% end %>